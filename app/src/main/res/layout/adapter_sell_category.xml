<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_subCat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_dailyDOseId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:weightSum="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Cat_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="visible"
                android:src="@drawable/ic_rectan"
                />

            <TextView
                android:id="@+id/daily_txtId"
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="@string/maths"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/colorGray"
                 android:layout_toRightOf="@+id/Cat_image_view"
                android:textSize="@dimen/_14sdp"
                android:layout_toLeftOf="@id/ivRight"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_right"
                android:layout_gravity="center_vertical|end"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
